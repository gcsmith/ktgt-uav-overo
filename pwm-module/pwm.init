#!/bin/sh

start() {
    echo "Starting pwm..."
    /sbin/modprobe pwm_module
}
stop() {
    echo "Stopping pwm..."
    /sbin/modprobe -r pwm_module
}
restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo $"Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?

